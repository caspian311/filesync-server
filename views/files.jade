extends layout

block content
  h1= title
  p Here are all the files you have uploaded

  a(href='/files/create', class='btn btn-primary') Upload new file
  &nbsp;&nbsp;
  a(href='/files', class='btn') Refresh

  br
  br

  table(class='table table-striped table-bordered')
    thead
      tr
        th Filename
        th
    tbody
      each file in files
        tr
          td= file
          td(style='text-align: center')
            a(id=file, class='btn btn-danger delete-file')
              i(class='icon-remove icon-white')
